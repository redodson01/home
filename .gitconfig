[alias]
	a   = add
	au  = add --update
	b   = branch --verbose --verbose
	ba  = branch --verbose --verbose --all
	c   = commit
	ca  = commit --amend
	cf  = config list
	ch  = checkout
	d   = diff
	dc  = diff --cached
	dcn = diff --cached --name-only
	dn  = diff --name-only
	l   = log --topo-order --oneline
	la  = log --topo-order --oneline --graph --all
	lf  = log --topo-order --oneline --first-parent
	ls  = log --topo-order --oneline --graph
	r   = remote --verbose
	s   = status
	sh  = show --oneline
	shn = show --oneline --name-only
	st  = stash list
[commit]
	gpgSign = true
[core]
	pager = diff-so-fancy | less --tabs=4 -RF
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
[interactive]
	diffFilter = diff-so-fancy --patch
